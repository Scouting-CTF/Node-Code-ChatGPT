<!DOCTYPE html>
<html>
<head>
    <title>Scoreboard</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Scoreboard</h1>
    <table>
        <tr>
            <th>Team Name</th>
            <th>Score</th>
        </tr>
        <% teams.forEach(team => { %>
            <tr>
                <td><%= team.name %></td>
                <td><%= team.score %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>